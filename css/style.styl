@font-face {
	font-family: 'nevi';
	src:url('icon/socialIcon/fonts/nevi.eot');
	src:url('icon/socialIcon/fonts/nevi.eot?#iefix') format('embedded-opentype'),
		url('icon/socialIcon/fonts/nevi.woff') format('woff'),
		url('icon/socialIcon/fonts/nevi.ttf') format('truetype'),
		url('icon/socialIcon/fonts/nevi.svg#nevi') format('svg');
	font-weight: normal;
	font-style: normal;
}

[data-icon]:before 
	font-family: 'nevi'
	content: attr(data-icon)
	speak: none
	font-weight: normal
	font-variant: normal
	text-transform: none
	line-height: 1
	-webkit-font-smoothing: antialiased


.icon-facebook, .icon-twitter 
	font-family: 'nevi'
	speak: none;
	font-style: normal
	font-weight: normal
	font-variant: normal
	text-transform: none
	line-height: 1
	-webkit-font-smoothing: antialiased

.icon-facebook:before 
	content: "\e000"

.icon-twitter:before 
	content: "\e001"


body
	font-family 'Open Sans', 'sans serif'
	font-size 16px
	margin 0
	padding 0

footer 
	border 1px solid red
	bottom 0
	height 20%
	position absolute
	width 100%

h1
	color black

header
	border 1px solid black
html 
	font-size 10px
i
	font-style normal
#contacto
	background-color #dad5cd
	border 1px solid blue
	font-family 'Open Sans', 'sans serif'
	padding-top 50px
	height 400px
#contacto .contacto-form 
	//border 1px solid #333
	display inline-block
	margin-left 100px
	vertical-align top
	width 400px
#contacto .btn-enviar
	-webkit-border-radius 5px
	-moz-border-radius 5px
	border-radius 5px
	background #B03535
	color #ecf0f1
	cursor pointer
	float right
	font-family 'Open Sans', 'sans serif'
	padding 10px 18px
	text-transform uppercase
#contacto .btn-enviar:hover
	background #942D2D
#contacto .contacto-form .input
	-webkit-border-radius 5px
	-moz-border-radius 5px
	border-radius 5px
	border 1px solid #b5b5b5
	-webkit-box-sizing border-box
	-moz-box-sizing border-box
	box-sizing border-box
	-webkit-box-shadow 0px 0px 10px rgba(204, 204, 204, 0.5) inset
	-moz-box-shadow 0px 0px 10px rgba(204, 204, 204, 0.5) inset
	box-shadow 0px 0px 10px rgba(204, 204, 204, 0.5) inset
	font-family 'Open Sans', 'sans serif'
	margin-bottom 5px
	outline 0
	padding 8px 20px 8px 40px
	width 350px
#contacto .contacto-form .input:focus
	border-color rgba(176, 53, 53, 0.8)
	-webkit-box-shadow inset 0 1px 1px rgba(0, 0, 0, 0.075), 0 0 8px rgba(176, 53, 53, 0.6)
	-moz-box-shadow inset 0 1px 1px rgba(0, 0, 0, 0.075), 0 0 8px rgba(176, 53, 53, 0.6)
	box-shadow inset 0 1px 1px rgba(0, 0, 0, 0.075), 0 0 8px rgba(176, 53, 53, 0.6)
#contacto .contacto-form .input.email
	background #f6f6f6 url("../img/icon/mail.png") no-repeat 10px center
	position relative
	z-index 2
#contacto .contacto-form .input.name
	background #f6f6f6 url("../img/icon/name.png") no-repeat 10px center
	position relative
	z-index 2
#contacto .contacto-form .input.subject
	background #f6f6f6 url("../img/icon/subject.png") no-repeat 10px center
	position relative
	z-index 2
#contacto .contacto-form textarea
	border 1px solid #b5b5b5
	-webkit-border-radius 5px
	-moz-border-radius 5px
	border-radius 5px
	font-family 'Open Sans', 'sans serif'
	margin-bottom 5px
	outline 0
	padding 8px 20px 8px 40px
	resize none
	width 290px
#contacto .contacto-form textarea.message
	background #f6f6f6 url("../img/icon/message.png") no-repeat 10px 12px
	position relative
	z-index 2
#contacto .contacto-form .message:focus
	border-color rgba(176, 53, 53, 0.8)
	-webkit-box-shadow inset 0 1px 1px rgba(0, 0, 0, 0.075), 0 0 8px rgba(176, 53, 53, 0.6)
	-moz-box-shadow inset 0 1px 1px rgba(0, 0, 0, 0.075), 0 0 8px rgba(176, 53, 53, 0.6)
	box-shadow inset 0 1px 1px rgba(0, 0, 0, 0.075), 0 0 8px rgba(176, 53, 53, 0.6)

#contacto .contacto-inf
	//border 1px solid #555
	display inline-block
	vertical-align top
	width 450px
#contacto .contacto-inf hr
	border dotted #B03535
	border-width 1px 0 0 0
	margin 0 30px 0 0
	width 113px
#contacto .contacto-inf p 
	font-size 19px
	font-weight 100
	line-height 24px
	margin-bottom 24px
#contacto .contacto-inf .redes
	font-size 14px
#contacto .contacto-inf .social	
	list-style none
	margin 0 300px 0 0
	text-align center
#contacto .contacto-inf .social li 
	display inline
#contacto .contacto-inf .social .icon-button
	background-color #f6f6f6
	-webkit-border-radius 3.6rem
	-moz-border-radius 3.6rem
	border-radius 3.6rem
	cursor pointer
	display inline-block
	font-size 2.0rem
	height 3.6rem
	line-height 3.6rem
	margin 0 5px
	position relative
	-webkit-user-select none
	-moz-user-select none
	-ms-user-select none
	user-select none
	width 3.6rem
#contacto .social .icon-button .icon-facebook
	color: #3B5998
#contacto .social .icon-button .icon-twitter
	color: #4099ff
#contacto .social .icon-button .icon-facebook:hover,
#contacto .social .icon-button .icon-twitter:hover
	color white
#contacto .social .icon-button i
	background: none;
	color: white;
	height: 3.6rem;
	left: 0;
	line-height: 3.6rem;
	position: absolute;
	top: 0;
	-webkit-transition: all 0.3s;
	   -moz-transition: all 0.3s;
	     -o-transition: all 0.3s;
	        transition: all 0.3s;
	width: 3.6rem;
	z-index 10
#contacto .social .icon-button span
	-webkit-border-radius 0
	-moz-border-radius 0
	border-radius 0
	display block
	left 50%
	height 0
	margin 0
	position absolute
	top 50%
	-webkit-transition all 0.3s
	-moz-transition all 0.3s
	-ms-transition all 0.3s
	-o-transition all 0.3s
	transition all 0.3s
	width 0
#contacto .social .icon-button:hover span
	-webkit-border-radius  3.6rem
	-moz-border-radius  3.6rem
	border-radius 3.6rem
	height 3.6rem
	margin: -1.8rem
	width 3.6rem 
#contacto .social .facebook span
	background-color: #3B5998;
#contacto .social .twitter span
	background-color: #4099ff;

